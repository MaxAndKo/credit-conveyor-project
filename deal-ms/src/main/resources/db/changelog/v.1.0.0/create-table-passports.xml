<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-passports" author="KonchalovMaxim">
        <createTable tableName="t_passports">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="passport_issue_branch" type="varchar(255)"/>
			<column name="passport_issue_date" type="date"/>
			<column name="passport_number" type="varchar(255)"/>
			<column name="passport_series" type="varchar(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>