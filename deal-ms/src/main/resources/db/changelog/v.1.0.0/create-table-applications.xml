<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-applications" author="KonchalovMaxim">
        <createTable tableName="t_applications">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="creation_date" type="date"/>
			<column name="ses_code" type="varchar(255)"/>
			<column name="sing_date" type="date"/>
			<column name="status" type="varchar(255)"/>
			<column name="client_id" type="bigint"/>
			<column name="credit_id" type="bigint"/>
			<column name="loan_offer_id" type="bigint"/>
        </createTable>
    </changeSet>

</databaseChangeLog>